<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AVGameRPG.Views.StatsView">

	<Grid>
		<!-- Tło -->
		<Image Source="avares://AVGameRPG/Assets/EQ.png"
			   Stretch="Fill"
			   IsHitTestVisible="False"/>

		<!-- Panel statystyk -->
		<Border Background="#BB000000"
				CornerRadius="12"
				Padding="24"
				Margin="16"
				HorizontalAlignment="Center"
				VerticalAlignment="Center">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="2*"/>
					<ColumnDefinition Width="3*"/>
				</Grid.ColumnDefinitions>

				<!-- Obraz po lewej (bez zmian) -->
				<Image Source="avares://AVGameRPG/Assets/character.png"
					   Stretch="Uniform"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center"
					   Grid.Column="0"/>

				<!-- Prawa kolumna: nagłówek + napisy WYŚRODKOWANE -->
				<StackPanel Grid.Column="1"
							HorizontalAlignment="Center"
							VerticalAlignment="Center"
							Spacing="12"
							Width="440">
					<!-- Nagłówek -->
					<TextBlock Text="Player stats:"
							   Foreground="White"
							   FontWeight="Bold"
							   FontSize="26"
							   HorizontalAlignment="Center"/>

					<!-- Napisy pod nagłówkiem, wszystko centrowane -->
					<StackPanel Spacing="6" HorizontalAlignment="Center">
						<TextBlock x:Name="PlayerNameText"  Text="Name: -"            FontSize="20" Foreground="White"  HorizontalAlignment="Center"/>
						<TextBlock x:Name="PlayerLevelText" Text="Player Level: -"     FontSize="20" Foreground="White"  HorizontalAlignment="Center"/>
						<TextBlock x:Name="PlayerHpText"    Text="HP: -"               FontSize="20" Foreground="White"  HorizontalAlignment="Center"/>
						<TextBlock x:Name="PlayerAtkText"   Text="Attack: -"           FontSize="20" Foreground="White"  HorizontalAlignment="Center"/>
						<TextBlock x:Name="PlayerDefText"   Text="Defense: -"          FontSize="20" Foreground="White"  HorizontalAlignment="Center"/>
						<TextBlock x:Name="PlayerAgiText"   Text="Agility: -"          FontSize="20" Foreground="White"  HorizontalAlignment="Center"/>
						<TextBlock x:Name="PlayerIntText"   Text="Intelligence: -"     FontSize="20" Foreground="White"  HorizontalAlignment="Center"/>
						<TextBlock x:Name="PlayerGoldText"  Text="Crowns: -"           FontSize="20" Foreground="Gold"   HorizontalAlignment="Center"/>
						<TextBlock x:Name="PlayerExpText"   Text="EXP: -"              FontSize="20" Foreground="White"  HorizontalAlignment="Center"/>
					</StackPanel>
				</StackPanel>
			</Grid>
		</Border>

		<!-- Exit -->
		<Button Content="Exit"
				Width="100" Height="40"
				HorizontalAlignment="Left"
				VerticalAlignment="Bottom"
				Margin="20"
				Click="OnExitClick"/>
	</Grid>
</UserControl>





