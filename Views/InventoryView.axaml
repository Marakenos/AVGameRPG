<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:AVGameRPG.Models"
             x:Class="AVGameRPG.Views.InventoryView">

	<UserControl.Resources>
		<!-- wiersz itemu w rozwijanej liście -->
		<DataTemplate x:Key="InvItemRow" x:DataType="models:Item">
			<StackPanel Margin="6,4">
				<Grid ColumnDefinitions="*,Auto,Auto">
					<!-- NAPISY NA CZARNO -->
					<TextBlock Text="{Binding Name}" Grid.Column="0" Foreground="Black" FontWeight="SemiBold"/>
					<TextBlock Text="{Binding Description}" Grid.Column="1" Margin="12,0,0,0"
							   Foreground="#333" FontSize="12"/>

					<!-- EQUIP: własny styl (nadpisuje globalny) -->
					<Button Content="Equip" Grid.Column="2" Margin="12,0,0,0" Click="OnEquipClick"
							Background="#4CAF50" Foreground="White" BorderBrush="#388E3C"
							BorderThickness="1" Padding="4,2" FontWeight="Bold"/>
				</Grid>
			</StackPanel>
		</DataTemplate>
	</UserControl.Resources>

	<Grid>
		<!-- tło jak w innych ekranach -->
		<Image Source="avares://AVGameRPG/Assets/twon_hal_inside.png"
			   Stretch="Fill" IsHitTestVisible="False"/>

		<Border Background="#BB000000" Padding="24" CornerRadius="12" Margin="16">
			<ScrollViewer>
				<StackPanel Spacing="12" Width="520" HorizontalAlignment="Right">

					<TextBlock Text="Inventory" FontSize="22" FontWeight="Bold"
							   Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,8"/>

					<!-- SLOTY -->
					<Expander>
						<Expander.Header>
							<Grid ColumnDefinitions="160,*,Auto">
								<TextBlock Text="Headgear:" Grid.Column="0" Foreground="Black" FontWeight="Bold"/>
								<Border Background="#2B2B2B" Grid.Column="1" Height="24" VerticalAlignment="Center">
									<TextBlock x:Name="HeadCurrentText" Margin="6,0" VerticalAlignment="Center" Foreground="White"/>
								</Border>
							</Grid>
						</Expander.Header>
						<StackPanel>
							<ItemsControl x:Name="HeadItems" ItemTemplate="{StaticResource InvItemRow}"/>
							<TextBlock x:Name="HeadEmpty" Text="(no items)" Foreground="#CCCCCC" IsVisible="False" Margin="6,2,0,6"/>
						</StackPanel>
					</Expander>

					<Expander>
						<Expander.Header>
							<Grid ColumnDefinitions="160,*,Auto">
								<TextBlock Text="Armor:" Grid.Column="0" Foreground="Black" FontWeight="Bold"/>
								<Border Background="#2B2B2B" Grid.Column="1" Height="24" VerticalAlignment="Center">
									<TextBlock x:Name="ArmorCurrentText" Margin="6,0" VerticalAlignment="Center" Foreground="White"/>
								</Border>
							</Grid>
						</Expander.Header>
						<StackPanel>
							<ItemsControl x:Name="ArmorItems" ItemTemplate="{StaticResource InvItemRow}"/>
							<TextBlock x:Name="ArmorEmpty" Text="(no items)" Foreground="#CCCCCC" IsVisible="False" Margin="6,2,0,6"/>
						</StackPanel>
					</Expander>

					<Expander>
						<Expander.Header>
							<Grid ColumnDefinitions="160,*,Auto">
								<TextBlock Text="Ring:" Grid.Column="0" Foreground="Black" FontWeight="Bold"/>
								<Border Background="#2B2B2B" Grid.Column="1" Height="24" VerticalAlignment="Center">
									<TextBlock x:Name="RingCurrentText" Margin="6,0" VerticalAlignment="Center" Foreground="White"/>
								</Border>
							</Grid>
						</Expander.Header>
						<StackPanel>
							<ItemsControl x:Name="RingItems" ItemTemplate="{StaticResource InvItemRow}"/>
							<TextBlock x:Name="RingEmpty" Text="(no items)" Foreground="#CCCCCC" IsVisible="False" Margin="6,2,0,6"/>
						</StackPanel>
					</Expander>

					<Expander>
						<Expander.Header>
							<Grid ColumnDefinitions="160,*,Auto">
								<TextBlock Text="Necklace:" Grid.Column="0" Foreground="Black" FontWeight="Bold"/>
								<Border Background="#2B2B2B" Grid.Column="1" Height="24" VerticalAlignment="Center">
									<TextBlock x:Name="NecklaceCurrentText" Margin="6,0" VerticalAlignment="Center" Foreground="White"/>
								</Border>
							</Grid>
						</Expander.Header>
						<StackPanel>
							<ItemsControl x:Name="NecklaceItems" ItemTemplate="{StaticResource InvItemRow}"/>
							<TextBlock x:Name="NecklaceEmpty" Text="(no items)" Foreground="#CCCCCC" IsVisible="False" Margin="6,2,0,6"/>
						</StackPanel>
					</Expander>

					<Expander>
						<Expander.Header>
							<Grid ColumnDefinitions="160,*,Auto">
								<TextBlock Text="Gloves:" Grid.Column="0" Foreground="Black" FontWeight="Bold"/>
								<Border Background="#2B2B2B" Grid.Column="1" Height="24" VerticalAlignment="Center">
									<TextBlock x:Name="GlovesCurrentText" Margin="6,0" VerticalAlignment="Center" Foreground="White"/>
								</Border>
							</Grid>
						</Expander.Header>
						<StackPanel>
							<ItemsControl x:Name="GlovesItems" ItemTemplate="{StaticResource InvItemRow}"/>
							<TextBlock x:Name="GlovesEmpty" Text="(no items)" Foreground="#CCCCCC" IsVisible="False" Margin="6,2,0,6"/>
						</StackPanel>
					</Expander>

					<Expander>
						<Expander.Header>
							<Grid ColumnDefinitions="160,*,Auto">
								<TextBlock Text="Weapon:" Grid.Column="0" Foreground="Black" FontWeight="Bold"/>
								<Border Background="#2B2B2B" Grid.Column="1" Height="24" VerticalAlignment="Center">
									<TextBlock x:Name="WeaponCurrentText" Margin="6,0" VerticalAlignment="Center" Foreground="White"/>
								</Border>
							</Grid>
						</Expander.Header>
						<StackPanel>
							<ItemsControl x:Name="WeaponItems" ItemTemplate="{StaticResource InvItemRow}"/>
							<TextBlock x:Name="WeaponEmpty" Text="(no items)" Foreground="#CCCCCC" IsVisible="False" Margin="6,2,0,6"/>
						</StackPanel>
					</Expander>

					<Expander>
						<Expander.Header>
							<Grid ColumnDefinitions="160,*,Auto">
								<TextBlock Text="Shield:" Grid.Column="0" Foreground="Black" FontWeight="Bold"/>
								<Border Background="#2B2B2B" Grid.Column="1" Height="24" VerticalAlignment="Center">
									<TextBlock x:Name="ShieldCurrentText" Margin="6,0" VerticalAlignment="Center" Foreground="White"/>
								</Border>
							</Grid>
						</Expander.Header>
						<StackPanel>
							<ItemsControl x:Name="ShieldItems" ItemTemplate="{StaticResource InvItemRow}"/>
							<TextBlock x:Name="ShieldEmpty" Text="(no items)" Foreground="#CCCCCC" IsVisible="False" Margin="6,2,0,6"/>
						</StackPanel>
					</Expander>

					<Expander>
						<Expander.Header>
							<Grid ColumnDefinitions="160,*,Auto">
								<TextBlock Text="Boots:" Grid.Column="0" Foreground="Black" FontWeight="Bold"/>
								<Border Background="#2B2B2B" Grid.Column="1" Height="24" VerticalAlignment="Center">
									<TextBlock x:Name="BootsCurrentText" Margin="6,0" VerticalAlignment="Center" Foreground="White"/>
								</Border>
							</Grid>
						</Expander.Header>
						<StackPanel>
							<ItemsControl x:Name="BootsItems" ItemTemplate="{StaticResource InvItemRow}"/>
							<TextBlock x:Name="BootsEmpty" Text="(no items)" Foreground="#CCCCCC" IsVisible="False" Margin="6,2,0,6"/>
						</StackPanel>
					</Expander>

					<Expander>
						<Expander.Header>
							<Grid ColumnDefinitions="160,*,Auto">
								<TextBlock Text="Miscellaneous items:" Grid.Column="0" Foreground="Black" FontWeight="Bold"/>
								<Border Background="#2B2B2B" Grid.Column="1" Height="24" VerticalAlignment="Center">
									<TextBlock x:Name="MiscCurrentText" Margin="6,0" VerticalAlignment="Center" Foreground="White"/>
								</Border>
							</Grid>
						</Expander.Header>
						<StackPanel>
							<ItemsControl x:Name="MiscItems" ItemTemplate="{StaticResource InvItemRow}"/>
							<TextBlock x:Name="MiscEmpty" Text="(no items)" Foreground="#CCCCCC" IsVisible="False" Margin="6,2,0,6"/>
						</StackPanel>
					</Expander>

					<Button Content="Exit" Width="120" HorizontalAlignment="Left" Click="OnExitClick" Margin="0,8,0,0"/>
				</StackPanel>
			</ScrollViewer>
		</Border>
	</Grid>
</UserControl>

