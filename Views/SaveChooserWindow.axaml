<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AVGameRPG.Views.SaveChooserWindow"
        x:CompileBindings="False"
        Width="420" Height="320"
        Title="Choose Save"
        CanResize="False"
        WindowStartupLocation="CenterOwner">

	<!-- Lokalny styl tylko dla przycisków w tym oknie -->
	<Window.Styles>
		<Style Selector="Button.chooser">
			<Setter Property="Background" Value="#EEE"/>
			<Setter Property="Foreground" Value="Black"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="CornerRadius" Value="4"/>
			<Setter Property="Padding" Value="8,4"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
		</Style>
		<Style Selector="Button.chooser:pointerover">
			<Setter Property="Background" Value="#E5E5E5"/>
		</Style>
		<Style Selector="Button.chooser:pressed">
			<Setter Property="Background" Value="#DADADA"/>
		</Style>
		<Style Selector="Button.chooser:disabled">
			<Setter Property="Foreground" Value="#888"/>
			<Setter Property="Background" Value="#F2F2F2"/>
		</Style>
	</Window.Styles>

	<Grid Margin="10" RowDefinitions="*,Auto">
		<!-- Lista plików -->
		<ListBox x:Name="FilesList"
				 Grid.Row="0"
				 Margin="0,0,0,8"
				 ClipToBounds="True"
				 SelectionChanged="OnSelectionChanged"
				 DisplayMemberBinding="{Binding Name}" />

		<!-- Pasek przycisków -->
		<StackPanel Grid.Row="1"
					Orientation="Horizontal"
					HorizontalAlignment="Right"
					Spacing="8">
			<Button x:Name="LoadBtn"
					Classes="chooser"
					Content="Load Game"
					Width="110"
					IsEnabled="False"
					IsDefault="True"
					Click="OnLoadClick" />
			<Button Content="Cancel"
					Classes="chooser"
					Width="110"
					IsCancel="True"
					Click="OnCancelClick" />
		</StackPanel>
	</Grid>
</Window>




